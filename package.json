{
  "name": "abolish",
  "displayName": "Abolish",
  "description": "Auto-correct misspelled words using Vim Abolish syntax",
  "version": "0.0.2",
  "publisher": "mskelton",
  "repository": {
    "type": "git",
    "url": "https://github.com/mskelton/vscode-abolish"
  },
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onCommand:type"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Abolish",
      "properties": {
        "abolish.defaultDictionaryEnabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Use the default dictionary of misspelled words"
        },
        "abolish.dictionary": {
          "type": "object",
          "default": {},
          "scope": "resource",
          "description": "Dictionary of misspelled words to correct",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    }
  },
  "main": "./out/extension.js",
  "icon": "resources/icon.png",
  "files": [
    "out/**/*",
    "resources/**/*",
    "LICENSE"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint .",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "test": "vitest"
  },
  "devDependencies": {
    "@mskelton/eslint-config": "^9.2.0",
    "@types/node": "^22.15.17",
    "@types/vscode": "^1.60.0",
    "eslint": "^9.29.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
